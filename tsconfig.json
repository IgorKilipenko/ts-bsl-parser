{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "outDir": "out",
        "sourceMap": true,
        "strict": false,
        "lib": [
            "ES2023"
        ],
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*.ts",
        "tests/unit/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
